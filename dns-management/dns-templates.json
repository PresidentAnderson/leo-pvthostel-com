  "quick_actions": {
    "verify_domain_ownership": {
      "google": {
        "type": "TXT",
        "name": "@",
        "value": "google-site-verification={verification-code}"
      },
      "microsoft": {
        "type": "TXT",
        "name": "@",
        "value": "MS={verification-code}"
      },
      "facebook": {
        "type": "TXT",
        "name": "@",
        "value": "facebook-domain-verification={verification-code}"
      }
    },
    "security_records": {
      "caa": {
        "type": "CAA",
        "name": "@",
        "value": "0 issue \"letsencrypt.org\"",
        "description": "Restrict SSL issuance to Let's Encrypt"
      },
      "dmarc_strict": {
        "type": "TXT",
        "name": "_dmarc",
        "value": "v=DMARC1; p=reject; rua=mailto:dmarc@leo.pvthostel.com; ruf=mailto:dmarc@leo.pvthostel.com",
        "description": "Strict DMARC policy"
      }
    }
  }
}