    "google-workspace": {
      "name": "Google Workspace Email",
      "description": "Configure MX records for Google Workspace",
      "records": [
        {
          "type": "MX",
          "name": "@",
          "value": "aspmx.l.google.com",
          "priority": 1,
          "ttl": 3600,
          "description": "Primary Google mail server"
        },
        {
          "type": "MX",
          "name": "@",
          "value": "alt1.aspmx.l.google.com",
          "priority": 5,
          "ttl": 3600,
          "description": "Alt mail server 1"
        },
        {
          "type": "MX",
          "name": "@",
          "value": "alt2.aspmx.l.google.com",
          "priority": 5,
          "ttl": 3600,
          "description": "Alt mail server 2"
        },
        {
          "type": "MX",
          "name": "@",
          "value": "alt3.aspmx.l.google.com",
          "priority": 10,
          "ttl": 3600,
          "description": "Alt mail server 3"
        },
        {
          "type": "MX",
          "name": "@",
          "value": "alt4.aspmx.l.google.com",
          "priority": 10,
          "ttl": 3600,
          "description": "Alt mail server 4"
        },
        {
          "type": "TXT",
          "name": "@",
          "value": "v=spf1 include:_spf.google.com ~all",
          "ttl": 3600,
          "description": "SPF record for Google"
        },
        {
          "type": "TXT",
          "name": "google._domainkey",
          "value": "v=DKIM1; k=rsa; p={google-dkim-key}",
          "ttl": 3600,
          "description": "DKIM for Google"
        },
        {
          "type": "TXT",
          "name": "_dmarc",
          "value": "v=DMARC1; p=quarantine; rua=mailto:admin@leo.pvthostel.com",
          "ttl": 3600,
          "description": "DMARC policy"
        }
      ],
      "notes": [
        "Verify domain ownership in Google Admin",
        "DKIM key available in Google Admin > Apps > Gmail > Authenticate email",
        "Test with: https://toolbox.googleapps.com/apps/checkmx/"
      ]
    },
    "office365": {
      "name": "Office 365 Email",
      "description": "Configure MX records for Microsoft 365",
      "records": [
        {
          "type": "MX",
          "name": "@",
          "value": "leo-pvthostel-com.mail.protection.outlook.com",
          "priority": 0,
          "ttl": 3600,
          "description": "Office 365 mail server"
        },
        {
          "type": "TXT",
          "name": "@",
          "value": "v=spf1 include:spf.protection.outlook.com -all",
          "ttl": 3600,
          "description": "SPF for Office 365"
        },
        {
          "type": "CNAME",
          "name": "autodiscover",
          "value": "autodiscover.outlook.com",
          "ttl": 3600,
          "description": "Autodiscover for Outlook"
        },
        {
          "type": "CNAME",
          "name": "selector1._domainkey",
          "value": "selector1-leo-pvthostel-com._domainkey.{tenant}.onmicrosoft.com",
          "ttl": 3600,
          "description": "DKIM selector 1"
        },
        {
          "type": "CNAME",
          "name": "selector2._domainkey",
          "value": "selector2-leo-pvthostel-com._domainkey.{tenant}.onmicrosoft.com",
          "ttl": 3600,
          "description": "DKIM selector 2"
        }
      ],
      "notes": [
        "Verify domain in Microsoft 365 admin center",
        "DKIM keys in Security & Compliance Center",
        "Test with: https://testconnectivity.microsoft.com"
      ]
    },
    "zoho-mail": {
      "name": "Zoho Mail",
      "description": "Configure MX records for Zoho Mail",
      "records": [
        {
          "type": "MX",
          "name": "@",
          "value": "mx.zoho.com",
          "priority": 10,
          "ttl": 3600,
          "description": "Primary Zoho mail server"
        },
        {
          "type": "MX",
          "name": "@",
          "value": "mx2.zoho.com",
          "priority": 20,
          "ttl": 3600,
          "description": "Secondary Zoho mail server"
        },
        {
          "type": "MX",
          "name": "@",
          "value": "mx3.zoho.com",
          "priority": 50,
          "ttl": 3600,
          "description": "Tertiary Zoho mail server"
        },
        {
          "type": "TXT",
          "name": "@",
          "value": "v=spf1 include:zoho.com ~all",
          "ttl": 3600,
          "description": "SPF for Zoho"
        },
        {
          "type": "TXT",
          "name": "zmail._domainkey",
          "value": "{zoho-dkim-value}",
          "ttl": 3600,
          "description": "DKIM for Zoho"
        }
      ],
      "notes": [
        "Verify domain in Zoho Mail Admin Console",
        "DKIM available in Email Authentication settings",
        "Free tier available for up to 5 users"
      ]
    },
    "mailgun": {
      "name": "Mailgun Email Service",
      "description": "Configure DNS for Mailgun email delivery",
      "records": [
        {
          "type": "TXT",
          "name": "@",
          "value": "v=spf1 include:mailgun.org ~all",
          "ttl": 3600,
          "description": "SPF for Mailgun"
        },
        {
          "type": "TXT",
          "name": "mg",
          "value": "v=spf1 include:mailgun.org ~all",
          "ttl": 3600,
          "description": "SPF for mg subdomain"
        },
        {
          "type": "CNAME",
          "name": "email.mg",
          "value": "mailgun.org",
          "ttl": 3600,
          "description": "Mailgun tracking"
        },
        {
          "type": "TXT",
          "name": "k1._domainkey.mg",
          "value": "{mailgun-dkim}",
          "ttl": 3600,
          "description": "DKIM for Mailgun"
        },
        {
          "type": "MX",
          "name": "mg",
          "value": "mxa.mailgun.org",
          "priority": 10,
          "ttl": 3600,
          "description": "Mailgun MX 1"
        },
        {
          "type": "MX",
          "name": "mg",
          "value": "mxb.mailgun.org",
          "priority": 10,
          "ttl": 3600,
          "description": "Mailgun MX 2"
        }
      ],
      "notes": [
        "Verify domain in Mailgun dashboard",
        "Use mg.leo.pvthostel.com for sending",
        "API key required for sending"
      ]
    },
    "sendgrid": {
      "name": "SendGrid Email Service",
      "description": "Configure DNS for SendGrid email delivery",
      "records": [
        {
          "type": "CNAME",
          "name": "em{number}",
          "value": "u{number}.wl{number}.sendgrid.net",
          "ttl": 3600,
          "description": "SendGrid domain authentication"
        },
        {
          "type": "CNAME",
          "name": "s1._domainkey",
          "value": "s1.domainkey.u{number}.wl{number}.sendgrid.net",
          "ttl": 3600,
          "description": "DKIM key 1"
        },
        {
          "type": "CNAME",
          "name": "s2._domainkey",
          "value": "s2.domainkey.u{number}.wl{number}.sendgrid.net",
          "ttl": 3600,
          "description": "DKIM key 2"
        },
        {
          "type": "TXT",
          "name": "@",
          "value": "v=spf1 include:sendgrid.net ~all",
          "ttl": 3600,
          "description": "SPF for SendGrid"
        }
      ],
      "notes": [
        "Authenticate domain in SendGrid settings",
        "Exact CNAME values provided after domain authentication",
        "API key required for sending"
      ]
    },
    "aws-ses": {
      "name": "AWS SES",
      "description": "Configure DNS for Amazon SES email",
      "records": [
        {
          "type": "TXT",
          "name": "_amazonses",
          "value": "{verification-token}",
          "ttl": 3600,
          "description": "Domain verification"
        },
        {
          "type": "MX",
          "name": "@",
          "value": "10 inbound-smtp.{region}.amazonaws.com",
          "priority": 10,
          "ttl": 3600,
          "description": "SES inbound mail"
        },
        {
          "type": "TXT",
          "name": "@",
          "value": "v=spf1 include:amazonses.com ~all",
          "ttl": 3600,
          "description": "SPF for SES"
        },
        {
          "type": "CNAME",
          "name": "{selector}._domainkey",
          "value": "{selector}.dkim.amazonses.com",
          "ttl": 3600,
          "description": "DKIM for SES"
        }
      ],
      "notes": [
        "Verify domain in AWS SES console",
        "DKIM tokens provided after verification",
        "Configure sending in your AWS region"
      ]
    },
    "wordpress": {
