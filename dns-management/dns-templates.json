{
  "templates": {
    "vercel": {
      "name": "Vercel Deployment",
      "description": "Configure DNS for Vercel hosting",
      "records": [
        {
          "type": "A",
          "name": "@",
          "value": "76.76.21.21",
          "ttl": 1,
          "proxied": false,
          "description": "Vercel's Anycast IP"
        },
        {
          "type": "CNAME",
          "name": "www",
          "value": "cname.vercel-dns.com",
          "ttl": 1,
          "proxied": false,
          "description": "WWW subdomain to Vercel"
        }
      ],
      "notes": [
        "Add domain in Vercel dashboard: vercel domains add leo.pvthostel.com",
        "Deploy with: vercel --prod",
        "SSL certificate will be auto-provisioned"
      ]
    },
    "github-pages": {
