        {
          "type": "A",
          "name": "ftp",
          "value": "{server-ip}",
          "ttl": 3600,
          "description": "FTP subdomain"
        },
        {
          "type": "CNAME",
          "name": "mail",
          "value": "@",
          "ttl": 3600,
          "description": "Mail subdomain"
        },
        {
          "type": "MX",
          "name": "@",
          "value": "mail.leo.pvthostel.com",
          "priority": 10,
          "ttl": 3600,
          "description": "Mail server"
        }
      ],
      "notes": [
        "Get server IP from hosting provider",
        "Configure SSL in hosting panel",
        "Set up email accounts in cPanel/hosting panel"
